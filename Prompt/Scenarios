import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;

public class LoginTest {
    public static void main(String[] args) throws InterruptedException {
        // Set up Chrome WebDriver
        System.setProperty("webdriver.chrome.driver", "/usr/bin/chromedriver");
        ChromeOptions options = new ChromeOptions();
        options.addArguments("--no-sandbox");
        options.addArguments("--verbose");
        options.addArguments("--headless");
        WebDriver driver = new ChromeDriver(options);

        // Open the Chrome browser and navigate to the Smart Bank login page
        System.out.println("Opening The Browser");
        driver.get("http://35.175.173.214:8081/");
        Thread.sleep(5000);
        System.out.println("Opening The URL: http://35.175.173.214:8081/");

        // Enter valid credentials
        WebElement usernameInput = driver.findElement(By.cssSelector("input#username"));
        WebElement passwordInput = driver.findElement(By.cssSelector("input#password"));
        usernameInput.sendKeys("krishna");
        passwordInput.sendKeys("brillio!2022");

        // Click the "Login" button
        WebElement loginButton = driver.findElement(By.cssSelector("button[type='submit']"));
        loginButton.click();
        Thread.sleep(5000);

        // Verify login success
        String expectedDashboardURL = "http://35.175.173.214:8081/transactions.html";
        if (driver.getCurrentUrl().equals(expectedDashboardURL)) {
            System.out.println("Login successful with username: krishna and password: brillio!2022");
        } else {
            System.out.println("Login failed");
        }

        // Navigate back to the login page
        driver.navigate().back();
        Thread.sleep(5000);

        // Enter invalid credentials
        String username1 = "krishnachavan";
        String password1 = "krishna@123";
        System.out.println("Entering an invalid user with username: " + username1 + " and password: " + password1);
        usernameInput.clear();
        usernameInput.sendKeys(username1);
        passwordInput.clear();
        passwordInput.sendKeys(password1);

        // Click the "Login" button
        loginButton.click();
        Thread.sleep(5000);

        // Check if error message is displayed
        WebElement errorMessage = driver.findElement(By.cssSelector("p.error-message"));
        if (errorMessage.isDisplayed()) {
            System.out.println("Error message: " + errorMessage.getText() + " with username: " + username1 + " and password: " + password1);
        } else {
            System.out.println("Error message element is not displayed");
        }

        // Close the browser
        System.out.println("Closing the Browser");
        driver.quit();
    }
}